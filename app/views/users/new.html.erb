<p>
<h2>Sign Up</h2></br>

<%= form_tag users_path do %>
  <div class="field">
    <%= text_field_tag :username, nil, :class => "defaultText", :title => "Username" %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, :class => "defaultText", :title => "Password" %>
  </div>
  <div class="field">
    <%= text_field_tag :email, nil, :class => "defaultText", :title => "E-Mail" %>
  </div>
  <div class="actions"><%= submit_tag "Sign up" %></div>
<% end %>
</p>