<p>
<h2>Login</h2><br/>

<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
</p>
