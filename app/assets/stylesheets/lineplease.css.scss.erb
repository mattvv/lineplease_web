.navbar-inner {
    background-image: url(<%= asset_path 'background.png' %>);
}

.navbar .nav li a {
    color: #ffffff;
}

.navbar .nav li a:hover {
    color: #cccccc;
}

.center {
    text-align:center;
}

.line a {
    color: #333333;
}

.line a:hover {
    color: #803fd9;
    text-decoration: none;
}

.line a:active {
    background:none;
}

.center-menu {
    position:absolute;
    left: 41%;
}

.purple {
    color: #803fd9;
}

.iphone {
  background: url("<%= asset_path "bg3.png"%>") 0 0 no-repeat;
  height: 522px;
  width: 269px;
  margin-top: 22px;
  margin-left: 40px;
}

#faded {
  position: relative;
  height: 458px;
  top: 80px;
  overflow: hidden;
  .pagination {
    position: absolute;
    bottom: 40px;
    border: none;
    left: 85px;
    li {
      float: left;
      margin-right: 10px;
      width: 20px;
      height: 20px;
      a {
        border: none;
        text-decoration: none;
        display: inline-block;
        width: 20px;
        height: 20px;
        overflow: hidden;
        padding: 0px 10px 0px 0;
        background: url("<%= asset_path "thumb.png"%>") 0 0 no-repeat; }
      &.current a, a:hover {
        background: url("<%= asset_path "thumb-h.png"%>") 0 0px no-repeat; }
    }
  }
}

ul {
    list-style: none;
}

.footer {
    margin-top: 45px;
    padding: 35px 0 36px;
    border-top: 1px solid #E5E5E5;
}

.marketing-byline {
    margin: 0px 0 27px;
    font-size: 18px;
    font-weight: 300;
    line-height: 24px;
    color: #999;
    text-align: center;
}

.marketing {
    h1 {
        margin: 15px 0 27px;
        font-size: 70px;
        font-weight: 300;
        text-align: center;
    }
    h2 {
        margin: 36px 0 15px;
        font-size: 40px;
        font-weight: 300;
        text-align: center;
    }
}

.ios-alert {
    display: none;
}

.android-alert {
    display: none;
}